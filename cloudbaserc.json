{
  "envId": "{{env.ENV_ID}}",
  "version": "2.0",
  "$schema": "https://framework-1258016615.tcloudbaseapp.com/schema/latest.json",
  "framework": {
    "name": "strapi",
    "plugins": {
      "server": {
        "use": "@cloudbase/framework-plugin-container",
        "inputs": {
          "cpu": 0.5,
          "mem": 1,
          "serviceName": "strapi",
          "servicePath": "/",
          "uploadType": "repository",
          "containerPort": 1337,
          "codeDetail": {
            "name": "strapi-docker",
            "url": "https://github.com/strapi/strapi-docker"
          },
          "dockerfilePath": "./strapi/Dockerfile",
          "volumeMounts": {
            "/srv/app": "strapi-cfs"
          }
        }
      }
    },
    "requirement": {
      "addons": [
        {
          "type": "CFS",
          "name": "strapi-cfs"
        }
      ]
    }
  },
  "functions": [],
  "region": "ap-shanghai",
  "functionRoot": "./functions"
}
